<Window x:Class="grepcmd.SmallHintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:grepcmd"
        xmlns:locals="clr-namespace:grepcmd.EditHelper"
        mc:Ignorable="d"
        Title="SmallHintWindow" Height="450" Width="800" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" Topmost="True" Opacity="0.9" AllowsTransparency="True">
    <Border BorderBrush="Black" BorderThickness="1" x:Name="displayContainer">
        <locals:SelectableTextBlock Padding="5,5,5,5" TextWrapping="NoWrap" x:Name="codecontainer">
        </locals:SelectableTextBlock>
    </Border>
</Window>
