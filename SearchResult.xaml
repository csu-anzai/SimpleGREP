<UserControl x:Class="grepcmd.SearchResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:grepcmd"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!--背景部分-->
        <Rectangle Width="15" HorizontalAlignment="Left" Fill="#FFF0F0F0"></Rectangle>
        <Rectangle Margin="15,0,0,0" Fill="#FFF"></Rectangle>
        
        <StackPanel Orientation="Vertical" x:Name="LargePanel" HorizontalAlignment="Stretch">
            <TextBlock Margin="16,0,0,0" x:Name="summary" Foreground="#FF489748">
                Total:    <Run x:Name="totalmatches">0</Run> matches in <Run x:Name="filecnt">0</Run> files
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
